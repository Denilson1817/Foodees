<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipalActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="0.2dp"
            app:cardBackgroundColor="#61E167"
            app:cardCornerRadius="20dp"

            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="402dp"
                android:layout_height="120dp"
                android:orientation="vertical"

                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bienvenidoPrincipal"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <ProgressBar
                    android:id="@+id/progresoDatos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/nombresPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombresPrincipal"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/correosPrincipal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correoPrincipal"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>

        <!-- Botones de menu -->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/th"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/th"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20sp">

                <Button
                    android:id="@+id/btnAdminPlatillos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#61E167"
                    android:text="@string/btnAdminPlantillos"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:cornerRadius="40sp" />

            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/persona"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/persona"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:cardCornerRadius="20sp">

                <Button
                    android:id="@+id/btnAgregarPaciente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#61E167"
                    android:text="@string/btnAgregarPaciente"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="400sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/paciente"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/paciente"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="0sp"
                app:cardCornerRadius="20sp">

                <Button
                    android:id="@+id/btnVisualizarPacientes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="#61E167"
                    android:text="@string/btnVisualizarPacientes"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="30sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>



        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:backgroundTint="#61E167"
            android:text="@string/btnCerrarSesion"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="20sp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>